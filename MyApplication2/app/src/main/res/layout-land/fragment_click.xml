<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <!-- Data binding (if needed) -->
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Button to create new drawing -->
        <Button
            android:id="@+id/createNewDrawing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:text="Create New Drawing"
            android:textColor="@android:color/white" />

        <!-- Button to edit existing drawing -->

        <!-- Recent drawings section -->
        <Button
            android:id="@+id/editExistingDrawing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:text="Edit Existing Drawing"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Recent Drawings:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Placeholder for recent drawing 1 (with preview and name) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/white"
                android:elevation="4dp"

                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/recentDrawing1Preview"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="16dp"
                    android:elevation="4dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/recentDrawing1Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="Drawing 1"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Placeholder for recent drawing 2 (with preview and name) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/white"
                android:elevation="4dp"

                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/recentDrawing2Preview"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="16dp"
                    android:elevation="4dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/recentDrawing2Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="Drawing 2"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Placeholder for recent drawing 3 (with preview and name) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/recentDrawing3Preview"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="16dp"
                    android:elevation="4dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/recentDrawing3Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="Drawing 3"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>
